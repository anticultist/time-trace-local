// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "dev-setup",
      "dependsOrder": "sequence",
      "dependsOn": ["start-webview-if-needed", "build"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "group": "dev-setup"
      }
    },
    {
      "label": "start-webview-if-needed",
      "type": "npm",
      "script": "start-webview-if-needed",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite-starter",
        "pattern": {
          "regexp": ".*"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^VITE_CHECKING:",
          "endsPattern": "^VITE_READY:"
        }
      },
      "presentation": {
        "group": "webview",
        "reveal": "always"
      }
    }
  ]
}
