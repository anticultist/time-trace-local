{
  "name": "time-trace-local-workspace",
  "private": true,
  "description": "Time Trace Local VS Code Extension Workspace",
  "version": "0.0.1",
  "scripts": {
    "build": "pnpm run --filter=@time-trace-local/services build && pnpm run --filter=time-trace-local build && pnpm run --filter=webview-ui build",
    "build:services": "pnpm run --filter=@time-trace-local/services build",
    "build:extension": "pnpm run --filter=time-trace-local build",
    "watch": "pnpm run -r watch",
    "clean": "pnpm run -r clean",
    "lint": "pnpm run -r lint",
    "test": "pnpm run -r test",
    "install:all": "pnpm install",
    "start-webview-if-needed": "tsx scripts/start-webview-if-needed.ts"
  },
  "devDependencies": {
    "@types/node": "22.17.2",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@vscode/vsce-sign",
      "esbuild",
      "keytar"
    ]
  }
}
